                <include>positioning_guidecontrol_buttons</include>
            </control>
            <control type="grouplist" id="1000">
                <defaultcontrol always="true">300</defaultcontrol>
                <top>30</top>
                <height>90</height>
                <left>500</left>
                <orientation>horizontal</orientation>
                <itemgap>10</itemgap>
                <onup>Action(close)</onup>
                <ondown>Action(close)</ondown>
                <onright>400</onright>
                <onleft>501</onleft>
                <usecontrolcoords>true</usecontrolcoords>
                <include content="button_round">
                    <param name="id" value="300" />
                    <param name="onclick" value="PVR.EpgGridControl(-24)" />
                    <param name="icon" value="icons/buttons/rewind.png" />
                    <param name="useanimations" value="true" />
                </include>
                <include content="button_round">
                    <param name="id" value="301" />
                    <param name="onclick" value="PVR.EpgGridControl(-12)" />
