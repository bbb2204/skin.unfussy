            <control type="grouplist">
                <top>30</top>
                <height>90</height>
                <left>1710</left>
                <orientation>horizontal</orientation>
                <itemgap>10</itemgap>
                <onup>Action(close)</onup>
                <ondown>Action(close)</ondown>
                <onleft>401</onleft>
                <onright>300</onright>
                <usecontrolcoords>true</usecontrolcoords>
