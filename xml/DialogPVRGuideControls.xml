                    <param name="icon" value="icons/buttons/play.png" />
                    <param name="useanimations" value="true" />
                    <param name="rotate90" value="true" />
                </include>
                <include content="button_round">
                    <param name="id" value="303" />
                    <param name="onclick" value="PVR.EpgGridControl(+12)" />
                    <param name="icon" value="icons/buttons/play.png" />
                    <param name="useanimations" value="true" />
                </include>
                <include content="button_round">
                    <param name="id" value="304" />
                    <param name="onclick" value="PVR.EpgGridControl(+24)" />
                    <param name="icon" value="icons/buttons/forward.png" />
                    <param name="useanimations" value="true" />
                </include>
            </control>
            <control type="grouplist" id="2000">
                <defaultcontrol always="true">400</defaultcontrol>
                <top>30</top>
                <height>90</height>
                <left>1100</left>
                <orientation>horizontal</orientation>
                <itemgap>10</itemgap>
                <onup>Action(close)</onup>
                <ondown>Action(close)</ondown>
                <onleft>304</onleft>
                <onright condition="!String.IsEmpty(Skin.String(runningat_name_0))">500</onright>
