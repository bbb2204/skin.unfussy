<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="view_503_gallery">
        <control type="group">
            <visible>Control.IsVisible(503)</visible>
            <!--<include>Visible_Right</include>-->
            <include>openclose_fade_slight_right</include>
            <top>180</top>
            <left>20</left>
            <right>20</right>
            <height>700</height>
            <include content="View_Gallery">
                <param name="id" value="503" />
                <param name="visible" value="Container.Content(sets) | Container.Content(episodes) | Container.Content(tvshows) | Container.Content(movies) | String.StartsWith(Container.FolderPath,plugin://)" />
            </include>
        </control>
        <include>view_503_content</include>
    </include>
    <include name="view_503_content">
        <control type="group">
            <visible>Control.IsVisible(503)</visible>
            <control type="group">
                <visible>String.IsEqual(Container(503).ListItem.DBTYPE,tvshow)</visible>
                <include content="listitem_background">
                    <param name="container_id">503</param>
                    <param name="active">false</param>
                    <param name="left">375</param>
                    <param name="top">90</param>
                    <param name="height">65</param>
                    <param name="width">1175</param>
                </include>
                <control type="label">
                    <top>100</top>
                    <width>100%</width>
                    <height>45</height>
                    <align>center</align>
                    <font>regular30</font>
                    <textcolor>active</textcolor>
                    <label>$INFO[ListItem.Property(TotalSeasons),[COLOR white]$LOCALIZE[33054]:[/COLOR] , / ]$INFO[ListItem.Property(TotalEpisodes),[COLOR white]$LOCALIZE[36907]:[/COLOR] ,]$INFO[ListItem.Property(WatchedEpisodes), / [COLOR white]$LOCALIZE[16102]:[/COLOR] ,]</label>
                </control>
            </control>
            <include content="listitem_background">
                <param name="container_id">503</param>
                <param name="active">false</param>
                <param name="left">373</param>
                <param name="top">885</param>
                <param name="height">190</param>
                <param name="width">1175</param>
            </include>
            <control type="label">
                <visible>String.IsEmpty(ListItem.Art(clearlogo))</visible>
                <width>100%</width>
                <height>140</height>
                <top>890</top>
                <align>center</align>
                <aligny>center</aligny>
                <font>regular60</font>
                <label>$INFO[ListItem.Label]</label>
                <scroll>true</scroll>
            </control>
            <control type="image">
                <visible>!String.IsEmpty(ListItem.Art(clearlogo))</visible>
                <visible>!Container.Content(episodes)</visible>
                <top>890</top>
                <width>100%</width>
                <height>140</height>
                <aspectratio>keep</aspectratio>
                <texture background="true" fallback="DefaultVideoFanart.png">$INFO[ListItem.Art(clearlogo)]</texture>
                <fadetime>100</fadetime>
            </control>
            <control type="label">
                <width>100%</width>
                <height>45</height>
                <bottom>10</bottom>
                <align>center</align>
                <aligny>center</aligny>
                <font>font30_title</font>
                <label>$INFO[ListItem.Year,(,)]</label>
                <scroll>true</scroll>
            </control>
        </control>    
    </include> 
    <include name="View_Gallery">
        <control type="group">
            <control type="wraplist" id="$PARAM[id]">
                <top>0</top>
                <left>-88</left>
                <width>2736</width>
                <height>700</height>
                <onleft>$PARAM[id]</onleft>
                <onright>$PARAM[id]</onright>
                <ondown>5199</ondown>
                <oninfo condition="String.IsEqual(ListItem.DBType,set)">ActivateWindow(1132)</oninfo>
                <onup condition="!Skin.HasSetting(KioskMode)">9000</onup>
                <pagecontrol>5199</pagecontrol>
                <focusposition>5</focusposition>
                <movement>4</movement>
                <preloaditems>2</preloaditems>
                <orientation>horizontal</orientation>
                <viewtype label="Gallery">bigwide</viewtype>
                <scrolltime tween="cubic" easing="out">500</scrolltime>
                <visible>$PARAM[visible]</visible>
                <itemlayout height="700" width="88">
                    <control type="group">
                        <left>0</left>
                        <right>10</right>
                        <include content="listitem_background">
                            <param name="container_id">503</param>
                            <param name="active">false</param>
                            <param name="top">5</param>
                            <param name="height">690</param>
                        </include>
                        <control type="image">
                            <left>0</left>
                            <right>0</right>
                            <top>0</top>
                            <bottom>0</bottom>
                            <texture background="true">dialogs/back.png</texture>
                        </control>
                        <control type="label">
                            <aligny>center</aligny>
                            <top>630</top>
                            <left>32</left>
                            <height>75</height>
                            <width>590</width>
                            <animation effect="rotate" end="90" start="0" condition="true" center="20,650">Conditional</animation>
                            <label>$INFO[ListItem.Label]</label>
                            <align>left</align>
                        </control>
                        <control type="label">
                            <aligny>center</aligny>
                            <top>630</top>
                            <left>32</left>
                            <height>75</height>
                            <width>590</width>
                            <animation effect="rotate" end="90" start="0" condition="true" center="20,650">Conditional</animation>
                            <label>$INFO[ListItem.Label]</label>
                            <align>left</align>
                            <textcolor>grey</textcolor>
                            <visible>Skin.HasSetting(darken_watched) + Integer.IsGreater(ListItem.Playcount,0)</visible>
                        </control>
                        <control type="image">
                            <centerleft>50%</centerleft>
                            <top>645</top>
                            <height>36</height>
                            <width>36</width>
                            <texture background="true">$VAR[SetOverlayVar]</texture>
                        </control>
                        <control type="image">
                            <centerleft>50%</centerleft>
                            <top>20</top>
                            <height>36</height>
                            <width>36</width>
                            <texture background="true">$VAR[WatchedOverlayVar]</texture>
                        </control>
                    </control>
                </itemlayout>
                <focusedlayout height="700" width="1186">
                    <include content="listitem_background">
                        <param name="container_id">503</param>
                        <param name="active">false</param>
                        <param name="top">5</param>
                        <param name="height">690</param>
                        <param name="width">1175</param>
                    </include>
                    <include>View_Gallery_Fanart</include>
                    <include>View_Gallery_Info</include>
                </focusedlayout>
            </control>
        </control>
    </include>
    <include name="View_Gallery_Fanart">
        <control type="group">
            <top>0</top>
            <left>0</left>
            <right>10</right>
            <height>100%</height>
            <control type="image">
                <width>100%</width>
                <height>100%</height>
                <texture background="true">dialogs/back.png</texture>
            </control>
            <!--<control type="multiimage">
                <left>10</left>
                <right>10</right>
                <top>10</top>
                <bottom>10</bottom>
                <fadetime>200</fadetime>
                <aspectratio>stretch</aspectratio>
                <imagepath background="true" fallback="DefaultVideoFanart.png">$VAR[InfoWidgetThumbVar]</imagepath>
                <fadetime>300</fadetime>
                <timeperimage>3000</timeperimage>
                <randomize>true</randomize>
                <visible>!Container.Content(episodes)</visible>
            </control>-->
            <control type="image">
                <left>10</left>
                <right>10</right>
                <top>10</top>
                <bottom>10</bottom>
                <fadetime>200</fadetime>
                <aspectratio>stretch</aspectratio>
                <texture background="true" fallback="DefaultVideoFanart.png">$INFO[ListItem.Art(fanart)]</texture>
                <fadetime>300</fadetime>
                <timeperimage>3000</timeperimage>
                <randomize>true</randomize>
                <visible>!Container.Content(episodes)</visible>
            </control>
            <control type="image">
                <left>10</left>
                <right>10</right>
                <top>10</top>
                <bottom>10</bottom>
                <fadetime>200</fadetime>
                <aspectratio>stretch</aspectratio>
                <texture background="true" fallback="DefaultVideoFanart.png">$INFO[ListItem.Art(thumb)]</texture>
                <visible>Container.Content(episodes) + ![Integer.IsLess(ListItem.Playcount,1) + Container.Content(episodes)]</visible>
            </control>
            <control type="image">
                <left>10</left>
                <right>10</right>
                <top>10</top>
                <bottom>10</bottom>
                <fadetime>200</fadetime>
                <aspectratio>stretch</aspectratio>
                <texture background="true" fallback="DefaultVideoFanart.png">$INFO[ListItem.Art(fanart)]</texture>
                <visible>Container.Content(episodes) + [Integer.IsLess(ListItem.Playcount,1) + Container.Content(episodes)]</visible>
            </control>
        </control>
    </include>
    <include name="View_Gallery_Info">
        <control type="group">
            <left>10</left>
            <right>20</right>
            <bottom>15</bottom>
            <height>722</height>
            <control type="image">
                <left>0</left>
                <bottom>565</bottom>
                <width>110</width>
                <height>110</height>
                <texture flipy="true">overlays/overlay-bg.png</texture>
                <visible>ListItem.IsResumable | Listitem.IsCollection | ListItem.IsPlaying | Integer.IsGreater(ListItem.Playcount,0)</visible>
<!--                 <visible>!String.StartsWith(Container.FolderPath,plugin://)</visible> -->
            </control>
            <control type="image">
                <left>5</left>
                <bottom>629</bottom>
                <width>36</width>
                <height>36</height>
                <texture background="true">$VAR[WatchedOverlayVar]</texture>
<!--                 <visible>!String.StartsWith(Container.FolderPath,plugin://)</visible> -->
            </control>
            <control type="image">
                <bottom>5</bottom>
                <right>5</right>
                <width>64</width>
                <height>64</height>
                <texture background="true">$VAR[SetOverlayVar]</texture>
            </control>
            <control type="image">
                <width>100%</width>
                <height>45</height>
                <bottom>-5</bottom>
                <texture background="true">dialogs/back.png</texture>
            </control>
        </control>
    </include>
</includes> 
