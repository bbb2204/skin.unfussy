    <include name="listitem_background">
        <param name="container_id">0</param>
        <param name="slide">false</param>
        <param name="active">false</param>
        <param name="simple">false</param>
        <param name="top">0</param>
        <param name="left">0</param>
        <param name="width">100%</param>
        <param name="height">100%</param>
        <definition>
            <control type="image">
                <visible>!$PARAM[active]</visible>
                <visible>$PARAM[simple]</visible>
                <height>79</height>
                <aspectratio>stretch</aspectratio>
                <texture colordiffuse="backgrounddark">colors/white.png</texture>
            </control>
            <control type="image">
                <visible>!$PARAM[active]</visible>
                <visible>!$PARAM[simple]</visible>
                <top>$PARAM[top]</top>
                <left>$PARAM[left]</left>
                <width>$PARAM[width]</width>
                <height>$PARAM[height]</height>
                <aspectratio>stretch</aspectratio>
                <texture colordiffuse="ff202020">backgrounds/overlay_background.png</texture>
                <bordertexture colordiffuse="border">colors/white.png</bordertexture>
                <bordersize>1</bordersize>
            </control>
            <control type="image">
                <visible>$PARAM[active]</visible>
                <animation type="Focus" condition="Container($PARAM[container_id]).OnNext + $PARAM[slide] + Skin.HasSetting(use_view_animations)" reversible="false">
                    <effect type="slide" start="0,-35" time="200" tween="sine" easing="out"/>
                </animation>
